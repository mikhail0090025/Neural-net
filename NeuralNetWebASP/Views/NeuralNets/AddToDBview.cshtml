@model NeuralNetWebASP.Models.GenerationParameters
@{
	Layout = null;
}
<h2>New element</h2>
<form method="post" id="myForm">
	@{
		if (Model == null)
		{
				<p style="color: red;">Model is null</p>
			return;
		}
		try
		{
				<div class="form_half">
				<center><h2>Inputs</h2></center>
				@for (int i = 0; i < Model.inputs_count; i++)
				{
					<label>Input @(i + 1):</label>
					<input type="number" id="input_@i" value="0" step="any"/>
					<br />
				}
				</div>
				<div class="form_half">
				<center><h2>Outputs</h2></center>
					@for (int i = 0; i < Model.outputs_count; i++)
				{
					<label>Output @(i + 1):</label>
					<input type="number" id="output_@i" value="0" step="any"/>
					<br />
				}
				</div>
		}
		catch (Exception ex)
		{
				<p>Error: @ex.Message</p>
		}
	}
	<center>
		<button onclick="FillByRandomNumbers()" type="button">Fill by random numbers</button>
		<button type="reset">Reset</button>
		<input type="submit" value="Add"/>
	</center>
	<b id="AddingToDBresult"></b>
</form>